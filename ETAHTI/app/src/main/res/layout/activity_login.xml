<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/recyclerForm">
            <ImageView
                android:id="@+id/imageLogo"
                android:layout_width="115dp"
                android:layout_height="168dp"
                android:background="@drawable/logokalsel"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@id/imageLogo"
                android:keepScreenOn="true"
                android:text="E-TAHTI"
                android:layout_marginTop="50sp"
                android:textColor="@color/black"
                android:textSize="50sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/recyclerForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_margin="30dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nomor NRP"
                            android:textColor="@color/black"/>
                        <EditText
                            android:id="@+id/nomor_nrp"
                            android:background="@drawable/bgsearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nomor NRP"
                            android:inputType="text"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Kata Sandi"
                            android:textColor="@color/black"/>
                        <EditText
                            android:id="@+id/password"
                            android:background="@drawable/bgsearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Kata Sandi"
                            android:inputType="textPassword"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/textLupaSandi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lupa kata sandi ?"
                        android:textColor="@color/black"
                        android:layout_marginBottom="10dp"/>
                    <Button
                        android:id="@+id/btnMasuk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/backgroundcolorsecond"
                        android:text="Masuk"
                        android:textColor="@color/white"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>