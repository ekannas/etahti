<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/backgroundcolor"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:layout_below="@id/layout_profile"
                android:layout_marginTop="70dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardTahanan"
                        android:layout_width="160sp"
                        android:layout_height="160sp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal|center_vertical">

                            <ImageView
                                android:id="@+id/icon_absen"
                                android:layout_width="80sp"
                                android:layout_height="80sp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/icon_tahanan"/>

                            <TextView
                                android:layout_marginTop="8sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Data Tahanan"
                                android:textStyle="bold"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardBarangBukti"
                        android:layout_width="160sp"
                        android:layout_height="160sp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal|center_vertical">

                            <ImageView
                                android:id="@+id/icon_rekap"
                                android:layout_width="80sp"
                                android:layout_height="80sp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/icon_barangbukti" />

                            <TextView
                                android:layout_marginTop="8sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Data Barang Bukti"
                                android:textStyle="bold"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="13dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardStatistikTahanan"
                        android:layout_width="160sp"
                        android:layout_height="160sp"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal|center_vertical">

                            <ImageView
                                android:id="@+id/icon_anlisis"
                                android:layout_width="80sp"
                                android:layout_height="80sp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/icon_stat_tahanan" />

                            <TextView
                                android:layout_marginTop="8sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Statisktik Tahanan"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardStatistikBarangBukti"
                        android:layout_width="160sp"
                        android:layout_height="160sp"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_horizontal|center_vertical">

                            <ImageView
                                android:id="@+id/icon_riwayat"
                                android:layout_width="80sp"
                                android:layout_height="80sp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/icon_stat_barangbukti" />

                            <TextView
                                android:layout_marginTop="8sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Statistik Barang Bukti"
                                android:textColor="@color/black" />

                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/layout_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textSatker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Polda Kalimantan Selatan"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textNama"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Irjen POL ABC"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textJabatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="POLRES ABC"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageProfile"
                    android:layout_width="70sp"
                    android:layout_height="70sp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/defaultimage" />
            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/menu_ilus"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>